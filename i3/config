exec --no-startup-id blueman-applet
exec --no-startup-id xautolock -time 90 -locker blurlock
exec_always --no-startup-id fix_xcursor

# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
	status_command /home/benjamin/.emacs.d/bin/my-i3status.sh
	position bottom

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
#	tray_output primary
#	tray_output eDP1

	bindsym button4 nop
	bindsym button5 nop
	font xft:Noto Sans 8
	strip_workspace_numbers yes

	colors {
    #   background $transparent
        background #2B2C2B
        statusline #F9FAF9
        separator  #454947

        #                          border  backgr. text
        focused_workspace  #F9FAF9 #16A085 #2B2C2B
        active_workspace   #595B5B #353836 #FDF6E3
        inactive_workspace #595B5B #353836 #EEE8D5
        urgent_workspace   #16A085 #FDF6E3 #E5201D
    }
}

bindsym $mod+m bar mode toggle

