# exec --no-startup-id volumeicon
# bindsym $mod+Ctrl+m exec terminal -e 'alsamixer'
# bindsym $mod+Shift+a exec terminal -e 'alsamixer'
mode "volume" {
     bindsym m     exec amixer -q -D pulse set Master toggle

     bindsym Right exec amixer -q set Master 2dB+ unmute
     bindsym Left  exec amixer -q set Master 2dB- unmute
     bindsym Up    exec amixer -q set Master 2dB+ unmute
     bindsym Down  exec amixer -q set Master 2dB- unmute

     bindsym k exec amixer -q set Master 6dB+ unmute; exec /home/benjamin/bin/getvol
     bindsym j exec amixer -q set Master 6dB- unmute; exec /home/benjamin/bin/getvol

     bindsym Shift+k exec amixer -q set Master 2dB+ unmute; exec /home/benjamin/bin/getvol
     bindsym Shift+j exec amixer -q set Master 2dB- unmute; exec /home/benjamin/bin/getvol

     bindsym Return        mode "default"
     bindsym Escape        mode "default"
     bindsym $mod+Shift+v  mode "default"
}
bindsym $mod+Shift+v mode "volume"

